{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "posts",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "thumbnail": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": true,
      "pluginOptions": {}
    },
    "excerpt": {
      "type": "text",
      "required": true,
      "maxLength": 100
    },
    "posttags": {
      "collection": "posttags",
      "via": "posts",
      "dominant": true
    },
    "postcomments": {
      "via": "post",
      "collection": "postcomment"
    }
  }
}
